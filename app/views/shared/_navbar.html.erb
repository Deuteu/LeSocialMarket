<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header page-scroll">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="glyphicon glyphicon-menu-hamburger"></span>
      </button>
      <%= link_to image_tag("logotsm.png", class: "img-responsive logo", size: "100x100", alt: "le social market logo"), root_path %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <div class="navbar-color" id="nav-color">
        <ul class="nav navbar-nav navbar-right">
        <% if not menu.nil? %>
          <% menu.each do |l,t| %>
            <li class="page-scroll">
              <a href="<%= l %>"><%= t %></a>
            </li>
          <% end %>
        <% end %>
        </ul>
      </div>
    </div> <!-- /.navbar-collapse -->
  </div> <!-- /.container-fluid -->
  <div class="line-bleu-bottom">
  </div>
  <div class="line-red-bottom">
  </div>

  <% if nl_success %>
    <div class="padding">
      <div class="alert fade in alert-success alert-dismissable">
        <button class="close" data-dismiss="alert" aria-hidden="true" type="button">×</button>
        Vous êtes bien inscrit à notre newsletter, merci.
      </div>
    </div>
  <% end %>
  <% if nl_failed %>
    <div class="padding">
      <div class="alert fade in alert-danger alert-dismissable">
        <button class="close" data-dismiss="alert" aria-hidden="true" type="button">×</button>
        Vous êtes déjà inscrit à notre newsletter ou l'adresse est invalide.
      </div>
    </div>
  <% end %>

</nav>